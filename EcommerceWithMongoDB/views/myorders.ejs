<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css"
      integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l"
      crossorigin="anonymous"
    />
    <script
      src="https://kit.fontawesome.com/eeb8707309.js"
      crossorigin="anonymous"
    ></script>

    <title>My Cart</title>
  </head>

  <body>
    <%- include('partials/header', {name: name ,isAdmin:isAdmin}); %>
    <br />
    <br />
    <!-- <%=product[0]%> -->

    <div class="d-flex flex-row row">
      <% if(placeorder){ placeorder.forEach((order)=>{
      order.items.forEach((item)=>{ product.forEach((prod)=>{
      if(prod.id==item.id){%> 
        <div class="col-sm-3 col-12">

            <div class="card shadow  py-2 px-1" style="width: 18rem" ">
                <img
                class="card-img-top img-fluid"
                src="<%=prod.images %>"
                alt="Card image cap"
                
                />
                
                <div class="card-body">
                    <h5 class="card-title">Name:-<%=prod.name %></h5>
                    <h5 class="card-title">Address:-<%=order.address %></h5>
                    <h5 class="card-title">Quantity:-<%=item.quantity%></h5>
                     <a class="btn btn-lg btn-danger"href="placeorder/cancel/<%=order.id%>/<%=prod.name%>" >CancelOrder</a >
                </div>
            </div>
            
        </div>
            <%}}) })}) } %>
    </div>
  </body>
</html>
